{
  "name": "FunOrganizer",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^6",
    "@sap/cds-hana": "^2",
    "@sap/hdi-deploy": "^4.6.1",
    "@sap/xssec": "^3",
    "express": "^4",
    "hdb": "^0.19.0",
    "passport": "^0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-project1": "cds watch --open project1/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy FunOrganizer --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-project_st1": "cds watch --open project_st1/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-activity": "cds watch --open activity/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "build": {
      "tasks": [
        {
          "for": "hana",
          "dest": "../db"
        },
        {
          "for": "node-cf"
        }
      ]
    },
    "requires": {
      "db": {
        "kind": "hana-cloud"
      },
      "[production]": {
        "db": {
          "kind": "hana-cloud"
        }
      },
      "[hybrid]": {
        "db": {
          "kind": "hana"
        }
      },
      "auth": "xsuaa"
    }
  },
  "sapux": [
    "app/project1",
    "app/project_st1",
    "app/activity",
    "app/activity"
  ],
  "devDependencies": {
    "@sap/ux-specification": "^1.108.11",
    "rimraf": "^3.0.2"
  }
}
